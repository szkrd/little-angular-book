<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>little angular book</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="<%= root %>normalize.css">
    <link rel="stylesheet" href="<%= root %>hljs-theme.css">
    <link rel="stylesheet" href="<%= root %>markdown.css">
    <link rel="stylesheet" href="<%= root %>main.css?v=<%= v %>">
</head>
<body>
<a id="menu-toggle" class="menu-toggle" href="#" title="toggle menu">
    <% [0, 1, 2].forEach(i => {%><span></span><%}) %>
</a>
<div class="menu">
    <% menuItems.forEach (menuItem => { %>
        <div class="menu-item depth-<%= menuItem.depth %> <%= menuItem.selected ? 'selected' : '' %>">
            <%= [ ' ', '▸', '▹', '▪', '▫' ][menuItem.depth - 1] || '•' %>
            <a href="<%= menuItem.url %>"><%= menuItem.title %></a>
            <% menuItem.selected && menuItem.sections.forEach((section, i) => {%>
                <div class="menu-section depth-<%= menuItem.depth + 1 %>">
                    ◦
                    <a href="#<%= i + 1 %>">
                        <%= section %>
                    </a>
                </div>
            <% }) %>
        </div>
    <% }) %>
</div>
<div class="markdown-body"><%- md %></div>
<script src="<%= root %>main.js?v=<%= v %>"></script>
</body>
</html>
